<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <com.cornflower1991.library.CountDownProgressView
        android:id="@+id/progressPieView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:text="倒计时"
        android:textSize="30sp"
        app:cdpvBackgroundColor="@android:color/transparent"
        app:cdpvProgressColor="#ff0000"
        app:cdpvStrokeColor="#ffffff"/>

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="start"/>


    <com.cornflower1991.library.ThreeCirView
        android:id="@+id/rippleView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

</LinearLayout>